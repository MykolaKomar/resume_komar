<main class='p-1'>
  {{#with navigation}}
  <div class='nav'>
    {{#each links}}
    <div class='nav-item'>
      <a href='{{href}}' class='nav-link  {{#unless href}} disabled {{/unless}}'>{{text}}</a>
    </div>
    {{/each}}

  </div>
  {{/with}}
  <div>
    <hr>
  </div>

  <div class="my-5">
    <h2>
      {{header}}
    </h2>
  </div>
  <div class="row">
    <div class="col-8">
      {{#with contacts_data}}
      <div>
        <h5> {{title}} </h5>
      </div>



      <div class="my-2">
        {{#each buttons}}
        <butto class="btn {{#if isPrimary}} btn-primary {{/if}} {{#if isOutline}} btn-outline-primary {{/if}}"> {{text}}
        </butto>
        {{/each}}
      </div>


      <div class="row g-8">
        {{#with form}}

        {{#each input}}
        <div class="col-6 my-3">
          <label class="form-label">{{label}}</label>

          <input class="form-control" placeholder="{{placeholder}}">

          <div class="form-text text-secondary">{{caption}}</div>
        </div>
        {{/each}}


        <div>
          <hr>
        </div>

        {{#each switch}}

        <div class="col-12">
          <div class="form-chek form-switch ">
            <input type="checkbox" class="form-check-input {{#if isActive}} active {{/if}}">
            <lable class="form-check-lable">{{text}}</lable>
          </div>
        </div>
        {{/each}}

        {{/with}}

        <div>
          <hr>
        </div>
        {{/with}}
      </div>

      <div class="col-12">
        {{#with delivery}}
        <div>
          <h5>
            {{title}}
          </h5>
        </div>
        <div class="card">
          {{#each select}}
          <div class="card-body">

            <div class="col-5">

              <label class="form-label">{{label}}</label>
              <select class="form-select form-select">
                <option placeholder> {{placeholder}} </option>
                {{#each options}}
                <option value="{{value}}"> {{text}} </option>
                {{/each}}
              </select>

            </div>

          </div>
          {{/each}}
        </div>
        <div class="col-12 my-3">
          {{#each delivery_type}}
          <div class="form-chek my-2">
            <input name="delivery_type" type="radio" class="form-check-input">
            <lable class="form-check-lable">{{type}}</lable>
          </div>
          {{/each}}
        </div>

        <div class="my-4">
          <hr>
        </div>

        <div class="col-12">
          {{#with payment}}
          <h5 class="form-lable">{{title}}</h5>
          <div class="form-chek my-3">
            {{#each list}}
            <input name="payment" type="radio" class="form-check-input">
            <lable class="form-check-lable">{{type}}</lable>
            <div class="form-text text-secondary my-3">{{description}}</div>
            {{/each}}
          </div>
          {{/with}}
        </div>

        <div class="my-4">
          <hr>
        </div>


        <h5 class="my-3`">{{contact.title}}</h5>
        <div class="row g-12">
          <div class="col-4">

            {{#with contact}}
            {{#with surname}}
            <label class="form-label">{{label}}</label>
            <input class="form-control" placeholder="{{placeholder}}">
            <div class="form-text text-secondary">{{caption}} </div>
            {{/with}}
            {{#with name}}
            <label class="form-label">{{label}}</label>
            <input class="form-control" placeholder="{{placeholder}}">
            <div class="form-text text-secondary">{{caption}} </div>
            {{/with}}
            {{#with phone}}
            <label class="form-label">{{label}}</label>
            <input class="form-control" placeholder="{{placeholder}}">
            <div class="form-text text-secondary">{{caption}} </div>
            {{/with}}
            {{#with email}}
            <label class="form-label">{{label}}</label>
            <input class="form-control" placeholder="{{placeholder}}">
            <div class="form-text text-secondary">{{caption}} </div>
            {{/with}}

            {{/with}}

          </div>
        </div>

        <div class="my-4">
          <hr>
        </div>

        {{#with coment}}
        <label class="form-label">{{label}}</label>
        <input class="form-control" placeholder="{{placeholder}}">

        {{/with}}

      </div>

      {{/with}}

      <div class="my-4">
        <hr>
      </div>

      {{#with coupon}}
      <h5>{{title}}</h5>

      {{#with select}}
      {{#with availabel_coupon}}
      <div class="col-12">

        <label class="form-label">{{label}}</label>
        <select class="form-select form-select form-select-lg">
          <option placeholder> {{placeholder}} </option>
          {{#each options}}
          <option value="{{value}}"> {{text}} </option>
          {{/each}}
        </select>

      </div>
      {{/with}}
      {{#with friend_coupon}}
      <div class="col-12 my-3">

        <label class="form-label">{{label}}</label>
        <select class="form-select form-select form-select-sm">
          <option placeholder> {{placeholder}} </option>
          {{#each options}}
          <option value="{{value}}"> {{text}} </option>
          {{/each}}
        </select>

      </div>
      {{/with}}

      {{/with}}
      {{#with add}}
      {{#with friend}}

      <div class="col-12 my-4">

        <label class="form-label">{{label}}</label>
        <input class="form-control form-control-lg" placeholder="{{placeholder}}">
        <div class="form-text text-secondary">{{caption}}</div>

      </div>
      {{/with}}
      {{#with colleague}}

      <div class="col-8 my-4">

        <label class="form-label">{{label}}</label>
        <input class="form-control form-control-sm" placeholder="{{placeholder}}">
        <div class="form-text text-secondary">{{caption}}</div>

      </div>
      {{/with}}

      {{/with}}

      {{/with}}

      <div class="my-4">
        <hr>
      </div>

      {{#with quiz}}
      <h5>{{title}}</h5>
      {{#with preference}}
      <div class="mt-3">{{title}}</div>

      <div class="col-12 my-3">
        {{#each options}}
        <div class="form-chek my-2">
          <input name="quiz" type="radio" class="form-check-input">
          <lable class="form-check-lable">{{.}}</lable>
        </div>
        {{/each}}
      </div>
      {{/with}}

      <div class="my-4">

        <label class="form-label">{{your_expirience.label}}</label>
        <input class="form-control">
      </div>

      {{#with purchase_frequency}}
      <div class="col-12 my-3">

        <label class="form-label">{{label}}</label>
        <select class="form-select form-select">
          <option placeholder> {{placeholder}} </option>
          {{#each options}}
          <option value="{{value}}"> {{text}} </option>
          {{/each}}
        </select>

      </div>
      {{/with}}
      {{#with factors}}
      <div class="col-12 mt-4">
        <h6 class="form-lable">{{title}} </h6>
        {{#each options}}
        <div class="form-chek">
          <input type="checkbox" class="form-check-input">
          <lable class="form-check-lable">{{.}}</lable>
        </div>
        {{/each}}

      </div>
      {{/with}}

      {{/with}}

    </div>

    <div class="col-4">

      <div class="card">
        {{#each action_block}}
        <button
          class="btn {{#if isSuccess}} btn-success {{/if}} {{#if isDanger}} btn-danger {{/if}} {{#if isInfo}} btn-info {{/if}} m-2">
          {{text}}</button>
        {{/each}}
      </div>
      <div class="card mt-3">
        <div class="card-body">
          {{#with total}}
          <div>
            <h5> {{title}}</h5>
          </div>
          <div>
            {{#each item_list}}

            <div>{{name}}: {{price}}</div>
            {{/each}}

            <div>
              <hr>
            </div>



            <div>
              {{#each additional_info}}

              <div>{{text}}: {{value}}</div>
              {{/each}}

              <div>
                <hr>
              </div>

              <div>
                {{#with total_price}}

                <div>{{text}}: {{value}}</div>
                {{/with}}

                <div>
                  <hr>
                </div>

                {{#each button}}
                <button
                  class="btn {{#if isPrimary}} btn-primary {{/if}} {{#if isOutline}} btn-outline-primary {{/if}} {{#if isInfo}} btn-info {{/if}} m-2">
                  {{text}}</button>
                {{/each}}

                {{/with}}
              </div>
            </div>


          </div>

        </div>
      </div>
    </div>
  </div>

  <div class="my-4">
    <hr>
  </div>

  {{#with footer}}
  <footer class="row my-4">
    <div class="col-3">
      {{#each [0]}}

      <div class="nav my-3">
        <div class="nav nav-item">
          <a href="{{link}}" class="nav-link"> {{text}}</a>
        </div>

      </div>
      {{/each}}

    </div>
    <div class="col-3">
      {{#each [1]}}

      <div class="nav my-3">
        <div class="nav nav-item">
          <a href="{{link}}" class="nav-link"> {{text}}</a>
        </div>

      </div>
      {{/each}}

    </div>
    <div class="col-3">
      {{#each [2]}}

      <div class="nav my-3">
        <div class="nav nav-item">
          <a href="{{link}}" class="nav-link"> {{text}}</a>
        </div>

      </div>
      {{/each}}

    </div>
    <div class="col-3">
      {{#each [3]}}

      <div class="nav my-3">
        <div class="nav nav-item">
          <a href="{{link}}" class="nav-link"> {{text}}</a>
        </div>

      </div>
      {{/each}}

    </div>
  </footer>
  {{/with}}
</main>