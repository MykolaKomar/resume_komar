<main class='p-5'>


  {{#with newsBlock}}
  <div class='mt-5'>
    <h1 class='text-center'>{{title}}</h1>
  </div>

  <div class='row'>
    {{#each cards}}
    <dix class='col-3'>
      <div class='card my-2 text-bg-dark'>

        <div class='card-header'>

          {{title}}
          {{#if isTop}}
          <span class='badge text-bg-danger rounded-pill'> TOP!</span>
          {{/if}}
          {{#if isNew}}
          <span class='badge text-bg-success rounded-pill'> NEW!</span>
          {{/if}}
        </div>
        <br />

        <div class='card-body'>
          {{description}}
        </div>
      </div>
    </dix>
    {{/each}}
  </div>
  {{/with}}

  <hr />

  {{#with goodsBlock}}
  <div class='nav nav-tabs'>
    {{#each tabs}}
    <div class='nav-item'>

      <a href='#' class='nav-link {{#if isActive}} active {{/if}} {{#if isDisabled}} disabled {{/if}}'> {{text}}</a>


    </div>
    {{/each}}

  </div>
  <div class="row">
    {{#each cards}}
    <div class="col-4">

      <div class="card my-3">
        <img class="card-img-top text-bg-secondary" scr="{{image}}" alt="Photo {{title}}">
        <div class="card">
          <div class="card-header">
            <h5>{{title}}</h5>
            {{#if isHot}}
            <span class='badge text-bg-warning rounded-pill'> HOT!</span>
            {{/if}}
            {{#if isNew}}
            <span class='badge text-bg-primary rounded-pill'> NEW!</span>
            {{/if}}
          </div>
          <div class="card-body">
            <span>{{description}}</span>
          </div>

        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/with}}

  <hr>

  {{#with subscribe}}
  <div class="card my-4 text-bg-dark">
    <div class="card-header">
      <h2>
        {{header}}
      </h2>

    </div>
    <div class="card-body">
      <p> {{description}}</p>
      {{#each buttons}}
      <div>
        <a href="{{link}}" class="btn btn-primary my-2 ">
          {{text}}
        </a>
      </div>
      {{/each}}

    </div>
  </div>
  {{/with}}

  <hr>

  {{#with service}}
  <div class="card my-4 text-bg-success">
    <div class="card-header text-center">
      <h2>
        {{title}}
      </h2>

    </div>
    <div class="card-body text-center">
      <p> {{description}}</p>
      {{#each buttons}}
      <div class="text-center">
        <a href="{{link}}" class="btn btn-primary my-2 ">
          {{text}}
        </a>
      </div>
      {{/each}}

    </div>
  </div>
  {{/with}}

  <hr>


</main>