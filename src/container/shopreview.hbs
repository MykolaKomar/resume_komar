<main class='p-5'>
  {{#with formBlock}}
  <div class="row">

    <div class="col-8">
      <h2>{{header}}</h2>
      <div class="mt-3">
        {{#with rating}}
        <span>{{title}}: {{value}}</span>
        {{/with}}
      </div>



      <div class='nav nav-tabs mt-4'>
        {{#with actionBlock}}
        {{#each tabs}}


        <div class="row g-4">

          <div class='nav-item ms-4'>
            <a href='#' class='nav-link {{#if isActive}} active {{/if}} text-center'>{{text}}</a>

          </div>
        </div>
        {{/each}}
        {{/with}}
      </div>

      <div class="my-5">
        <hr>
      </div>

      {{#with actionBlock.report}}

      <div class="card">
        <div class="card-body">
          <p>{{title}}</p>
          {{#with button}}
          <a href="{{link}}" class="btn btn-secondary"> {{text}}</a>
          {{/with}}
        </div>
      </div>
      {{/with}}

      <div class="mt-5">
        <hr>
      </div>

      {{#with feedbackBlock}}
      <div>
        <h3>{{title}}</h3>
      </div>
      {{#each buttons}}

      <a href="{{link}}" target="_blank"
        class="mx-2 mt-2 btn {{#if isWarning}} btn-warning {{/if}} {{#if isSuccess}} btn-success {{/if}} {{#if isDanger}} btn-danger {{/if}}">{{text}}</a>
      {{/each}}
      {{/with}}


    </div>

    <div class="col-4">
      {{#with goodsInfo}}
      <div class="card">
        <div class="card-body">
          <h1 class="text-center"> <i class="bi bi-laptop"></i></h1>
          <h5>{{name}}</h5>
        </div>
      </div>

      <div class="card mt-2">
        <div class="card-body">
          <h5>{{price}}</h5>
          {{#each buttons}}
          <div class="mt-3">
            <a href="{{link}}"
              class="btn {{#if isPrimary}} btn-primary {{/if}} {{#if isSecondary}} btn-secondary {{/if}}">{{text}}</a>
          </div>
          {{/each}}
        </div>
      </div>

      <div class="card mt-2">
        <div class="card-body">
          {{#with seller}}

          <span>{{title}}: <b class="ms-2">{{value}}</b></span>

          {{/with}}
        </div>
      </div>

      {{/with}}
    </div>
  </div>
  {{/with}}



  <div class=" mt-5">
    <hr>
  </div>

 {{> reviewItem}}

  {{#with service}}
  <div class="card text-bg-success">
    <div class="card-body text-center">
      <div>
        <h2>{{title}}</h2>
      </div>
      <p>{{description}}</p>
      {{#each buttons}}
      <div><a href="{{link}}" target="_blank" class="btn btn-primary">{{text}}</a> </div>
      {{/each}}
    </div>
  </div>
  {{/with}}

</main>