{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

    {{#with main}}
    <main class="p-5">
        <section>
            <div>
                {{> title data="Work history" big=false}},
            </div>
            <div>
                <p>
                <ul>
                    {{#each works}}
                    <li>
                        <div>
                            {{position}}
                        </div>
                        <br>
                        <div>
                            {{duration.from}} - {{#if duration.to}} {{duration.to}} {{else}} Today {{/if}}
                        </div>
                        <br>
                        <div>
                            {{#if company.url}}
                            {{> link text=company.name href=company.url blank=true
                            noLine=true}}
                            {{else}}
                            <b>{{company.name}}</b>

                            {{/if}}
                        </div>
                        <br>
                        <br>
                    </li>


                    <div>
                        <strong> Projects ({{projectAmount}}) </strong>
                    </div>
                    <br>


                    <ul>
                        {{#each projects}}

                        <li class="row">

                            <div>
                                {{> link text=name href=url blank=true noLine=true}}
                            </div>
                            <br>

                            <div>
                                <p>
                                    {{about}}
                                </p>
                            </div>
                            <br>
                            <div class="col-6">
                                <div>
                                    <em>
                                        Project stacks ({{stackAmount}})
                                    </em>
                                </div>

                                <br>

                                <ul>
                                    {{#each stacks}}
                                    <li>

                                        {{name}}

                                    </li>
                                    {{/each}}
                                </ul>
                            </div>
                            <br>

                            <div class="col-6">
                                <div>
                                    <em>
                                        Project awards
                                    </em>
                                </div>

                                <br>

                                <ul>
                                    {{#each awards}}
                                    <li>

                                        {{name}}

                                    </li>
                                    {{/each}}
                                </ul>
                            </div>

                        </li>
                        {{/each}}
                    </ul>
                    </li>
                    <br>
                    {{/each}}
                </ul>
                </p>
            </div>
        </section>


    </main>
    {{/with}}

