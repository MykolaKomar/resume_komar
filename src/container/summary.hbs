{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}


    {{#with main}}
    <main class="p-5 row">
        <section class="col-6">
            <div>
                {{> title data="Summary" big=true}}
            </div>
            <div>
                <p>
                    {{summary.text}}
                </p>
            </div>
        </section>

        <section class="col-6">


            {{> title data="Other experience" big=false}}


            <div>
                {{#with experiens}}
                <p>

                    {{text}}

                </p>
                {{/with}}
            </div>
        </section>
    </main>
    {{/with}}


