{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}


    {{#with main}}
    <main class="p-5 row">
        <section class="col-6">
            {{> title data="All skills" big=true}}
            <ul>
                {{#each skills}}
                <li>
                    {{name}}
                    {{#if point includeZero=true}} ({{point}}) {{/if}}
                    {{#if isTop}}(top!){{/if}}
                    {{#unless point includeZero=true}}(Not study){{/unless}}
                    {{#unless point}}

                    {{#if point includeZero=true}}(Study now) {{/if}}
                    {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>
        <section class="col-6">
            {{> title data="My hobbies" big=false}}
            <ol>
                {{#each hobbies}}
                <li>
                    {{name}}
                    {{#if isMain }} (favourite) {{/if}}
                </li>
                {{/each}}
            </ol>
        </section>
    </main>
    {{/with}}




